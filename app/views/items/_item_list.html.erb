<% if items.any? %>
    

    <table class="table table-hover">
        <thead>
            <tr>
                <th> الصوره </th>
                <th> الاسم </th>
                <th> الكميه </th>
                <th> الثمن </th>
                <th> اجمالي الثمن </th>
                <th></th>

            </tr>

        </thead>

        <tbody>

            <%= items.each do |item| %>
                <tr>
                    <td> <%= image_tag item.product.image.small.url %> </td>
                    <td> <%= item.product.name %> </td>
                    <td> <%= item.quantity %> </td>
                    <td> <%= item.product.price %> </td>
                     <td> <%= item.product.price * item.quantity.to_i %> </td>
                </tr>
            <% end %>

        </tbody>

    </table>
<% else %>

    <p class="text-right text-danger"> لا يوجد عناصر في هذا الاوردر الرجاء اضافه عناصر </p>

<% end %>