<div class="row">
    <div class="col-md-3">
        <% if @product.image.medium.url.nil? %>
            <b class="text-danger"> غير متوفر </b>
        <% else %>
            <%= image_tag @product.image.medium.url, class: 'img-thumbnail img-fluid' %>
        <% end %>
    </div>
    <div class="col-md-6">
        <h4 class="text-right"> <%= @product.name %> </h4>
        <p class="text-right">
             <% if @product.description.nil? %>
                <b class="text-danger"> غير متوفر </b>
            <% else %>
                <%= @product.description %>
            <% end %>
        </p>
        <p class="text-right"> <%= @product.price %> جنيه </p>

        <p class="text-right"> تم اضافه المنتج بواسطه <%= link_to @product.user.name, profile_path(@product.user) %>  </p>
        <p class="text-right"> added <%= time_ago_in_words(@product.created_at) %> ago </p>
        <p class="text-right">
            <%= link_to 'تعديل', edit_product_path(@product) %>
        </p>
    </div>
</div>