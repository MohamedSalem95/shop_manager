<div class="row"> 


    <div class="col">

        <% if not @products.empty?  %>
            <p class="text-right mb-2">
                <b> <%= @products.count %> </b> منتج
                <%= link_to 'اضافه منتج', new_product_path, class: 'btn btn-success float-left' %>
            </p>
            <div class="fix"></div>
            <table class="table table-hover">
            <thead>
                <tr>
                    <th> صوره المنتج </th>
                    <th> اسم المنتج </th>
                    <th> الوصف </th>
                    <th> السعر </th>
                    <th> تم الاضافه بواسطه </th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                <% @products.each do |product| %>
                    <tr>
                        <td>
                            <% if product.image.small.url.nil? %>
                                <b class="text-danger"> غير متوفر </b>
                            <% else %>
                                <%= image_tag product.image.small.url %>
                            <% end %>
                        </td>

                        <td> <%= product.name %> </td>

                        <td>
                            <% if product.description.nil? %>
                                <b class="text-danger"> غير متوفر </b>
                            <% else %>
                                <%= product.description %>
                            <% end %>
                        </td>

                        <td> <%= product.price %> </td>

                        <td> <%= link_to product.user.name, profile_path(product.user) %> </td>
                        <td> <%= link_to 'حذف', product_path(product), method: :delete, data: {confirm: 'هل انت متاكد؟'}, class: 'btn btn-outline-danger btn-sm' %> </td>
                        <td> <%= link_to 'عرض', product_path(product), class: 'btn btn-outline-primary btn-sm' %> </td>
                        <td> <%= link_to 'تعديل', edit_product_path(product), class: 'btn btn-outline-primary btn-sm' %> </td>
                    </tr>
                <% end %>
            
            </tbody>
        </table>

        <% else %>
            <p class="text-right"> انت لم تضف اي منتج بعد, يمكنك اضافه منتج جديد من <u> <%= link_to 'هنا', new_product_path %> </u> </p>
        <% end %>

    </div>
</div>